<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>

        <variable
            name="artwork"
            type="com.android.goodapplications.goodapplications.Model.Artwork" />
    </data>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_singel_artwork_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.android.goodapplications.goodapplications.SingleArtworkActivity"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">
        <include
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <android.support.design.widget.NavigationView
            android:id="@+id/nav_single_artwork_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/activity_main_drawer" />
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="80dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/single_artwork_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/single_artwork_artistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/single_artwork_title" />
            <TextView
                android:id="@+id/single_artwork_bodyText"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:maxLines = "100"
                android:gravity="right"
                android:layout_width="match_parent"
                android:scrollbars = "vertical"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/single_artwork_artistName"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.DrawerLayout>
</layout>